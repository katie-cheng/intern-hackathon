# Azure OpenAI Configuration (used for both text generation and Sora video generation)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_API_VERSION=2023-05-15
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name
AZURE_OPENAI_INSTANCE_NAME=your_instance_name
AZURE_OPENAI_ENDPOINT=https://your-instance.openai.azure.com

# Azure Speech Services (for STT and TTS)
AZURE_SPEECH_KEY=your_speech_key_here
AZURE_SPEECH_REGION=your_speech_region_here

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Note: Sora video generation uses the same Azure OpenAI credentials above
# No separate Sora API key is needed 